<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgdietary"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".preferensi.HalamanEditPreferensi">

    <!-- Judul Halaman -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Preferensi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Kolom Pertama: Allergenic Ingredients -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergenic Ingredients"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/checkBoxGroupAllergenic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxDairy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy" />

                <CheckBox
                    android:id="@+id/checkBoxEgg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Egg" />

                <CheckBox
                    android:id="@+id/checkBoxGluten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gluten" />

                <CheckBox
                    android:id="@+id/checkBoxPeanut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peanut" />

                <CheckBox
                    android:id="@+id/checkBoxSeafood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seafood" />

                <CheckBox
                    android:id="@+id/checkBoxSesame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sesame" />

                <CheckBox
                    android:id="@+id/checkBoxSoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soy" />

                <CheckBox
                    android:id="@+id/checkBoxSulfite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sulfite" />

                <CheckBox
                    android:id="@+id/checkBoxTreenut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treenut" />

                <CheckBox
                    android:id="@+id/checkBoxWheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wheat" />

            </LinearLayout>

        </LinearLayout>

        <!-- Kolom Kedua: Disliked Ingredients -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Disliked Ingredients"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/checkBoxGroupDisliked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxAlcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alcohol" />

                <CheckBox
                    android:id="@+id/checkBoxAvocado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avocado" />

                <CheckBox
                    android:id="@+id/checkBoxBeef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beef" />

                <CheckBox
                    android:id="@+id/checkBoxFish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish" />

                <CheckBox
                    android:id="@+id/checkBoxMayonnaise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mayonnaise" />

                <CheckBox
                    android:id="@+id/checkBoxOnion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onion" />

                <CheckBox
                    android:id="@+id/checkBoxPork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pork" />

                <CheckBox
                    android:id="@+id/checkBoxPotato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potato" />

                <CheckBox
                    android:id="@+id/checkBoxSeafoodDisliked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seafood" />

                <CheckBox
                    android:id="@+id/checkBoxShrimp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shrimp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSimpanPreferensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save"/>
</LinearLayout>
